<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <FactionDef ParentName="HumanFactionBase" Name="VaultFactionBase" Abstract="True">
        <pawnSingular>Inhabitant</pawnSingular>
        <pawnsPlural>Inhabitants</pawnsPlural>
        <categoryTag>Outlander</categoryTag>
        <listOrderPriority>30</listOrderPriority>
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <leaderTitle>overseer</leaderTitle>
        <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
        <factionNameMaker>NamerFactionVaultRegular</factionNameMaker>
        <settlementNameMaker>NamerFactionVaultSettlementRegular</settlementNameMaker>
        <techLevel>Industrial</techLevel>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>0.95</commonality>
            </li>
            <li>
                <categories>
                    <li>Offworld</li>
                </categories>
                <commonality>0.05</commonality>
            </li>
        </backstoryFilters>
        <geneticVariance>0.8</geneticVariance>
        <hairTags>
            <li>Rural</li>
        </hairTags>
        <caravanTraderKinds>
            <li>Caravan_Vault_CombatSupplier</li>
            <li>Caravan_Vault_FoodMerchant</li>
        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Outlander_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Outlander_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>
            <li>
                <!-- Normal fights, standard mix -->
                <kindDef>Combat</kindDef>
                <options>
                    <VaultDweller>5</VaultDweller>
                    <VaultDweller_Guard>10</VaultDweller_Guard>
                    <Grenadier_Destructive>1.5</Grenadier_Destructive>
                    <Mercenary_Slasher>7</Mercenary_Slasher>
                    <Mercenary_Gunner>10</Mercenary_Gunner>
                    <VaultDweller_AdvancedWarrior>10</VaultDweller_AdvancedWarrior>
                    <VaultDweller_Councilman>10</VaultDweller_Councilman>
                </options>
            </li>
            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <VaultDweller>20</VaultDweller>
                    <VaultDweller_Guard>10</VaultDweller_Guard>
                    <VaultDweller_Councilman>10</VaultDweller_Councilman>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <Town_Trader>1</Town_Trader>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2</Alpaca>
                    <Elephant>1</Elephant>
                </carriers>
                <guards>
                    <VaultDweller>3</VaultDweller>
                    <VaultDweller_Guard>10</VaultDweller_Guard>
                    <Grenadier_Destructive>1.5</Grenadier_Destructive>
                    <Mercenary_Slasher>7</Mercenary_Slasher>
                    <Mercenary_Gunner>10</Mercenary_Gunner>
                    <VaultDweller_AdvancedWarrior>10</VaultDweller_AdvancedWarrior>
                </guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <VaultDweller>10</VaultDweller>
                    <VaultDweller_Guard>10</VaultDweller_Guard>
                    <Grenadier_Destructive>1.5</Grenadier_Destructive>
                    <Mercenary_Slasher>7</Mercenary_Slasher>
                    <Mercenary_Gunner>10</Mercenary_Gunner>
                    <VaultDweller_AdvancedWarrior>10</VaultDweller_AdvancedWarrior>
                    <VaultDweller_Councilman>10</VaultDweller_Councilman>
                </options>
            </li>
        </pawnGroupMakers>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    </FactionDef>

    <FactionDef ParentName="VaultFactionBase">
        <defName>VaultFactionCivil</defName>
        <label>civil vault</label>
        <description>These people have lived here in their vaults for centuries. While companies own the vaults, they're governed by a sole individual called an Overseer. They usually work with simple machinery and defend themselves with advanced gunpowder weapons.\n\nNot much is known about what they value.\n\nThis particular group holds civil behavior in high regard.</description>
        <colorSpectrum>
            <li>(0.35, 0.30, 0.60)</li>
            <li>(0.45, 0.40, 0.90)</li>
        </colorSpectrum>
        <startingGoodwill>0</startingGoodwill>
        <naturalColonyGoodwill>-50~50</naturalColonyGoodwill>
    </FactionDef>

    <FactionDef ParentName="VaultFactionBase">
        <defName>VaultFactionIndependent</defName>
        <factionNameMaker>NamerFactionVaultIndependent</factionNameMaker>
        <label>independent vault</label>
        <description>These people have lived here in their vaults for centuries. While companies own the vaults, they're governed by a sole individual called an Overseer. They usually work with simple machinery and defend themselves with advanced gunpowder weapons.\n\nNot much is known about what they value.\n\nThis particular group has declared independence from their corporate masters.</description>
        <colorSpectrum>
            <li>(0.35, 0.30, 0.60)</li>
            <li>(0.45, 0.40, 0.90)</li>
        </colorSpectrum>
        <startingGoodwill>0</startingGoodwill>
        <naturalColonyGoodwill>-50~50</naturalColonyGoodwill>
    </FactionDef>
</Defs>